#include<stdio.h>

int main(){
	
	int a, b , c, d;
	
	printf("valor de a :");
	scanf("%d", &a);
	printf("valor de b :");
	scanf("%d", &b);
	printf("valor de c :");
	scanf("%d", &c);
	printf("valor de d :");
	scanf("%d", &d);
	
	if(b>c && d>a && (c+d) > (a+b) && c>0 && d>0 && a % 2==0)


	printf("valores aceitos");
	else printf("valores nao aceitos");	
	
	
	
	
}
